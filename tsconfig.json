{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts", "src/**/*.mdx", "src/**/*.astro"]
}
